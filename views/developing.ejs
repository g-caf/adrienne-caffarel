<%- include('partials/head', { title: 'Developing' }) %>
<body>
  <div class="page-container developing-page">
    <%- include('partials/header') %>

    <main>
      <section class="developing-section">
        <div class="portfolio-block">
          <div class="portfolio-block-header">
            <h3 class="portfolio-block-title">Event Production</h3>
          </div>

          <div class="video-carousel">
            <button type="button" class="slider-arrow slider-arrow-left" data-slider-prev aria-label="Previous video">&#8592;</button>

            <div class="video-slider" data-video-slider>
              <% (eventProductionMedia || []).forEach((item) => { %>
                <article class="video-slide">
                  <% if (item.type === 'video') { %>
                    <video controls autoplay muted loop preload="metadata" playsinline>
                      <source src="<%= item.src %>" type="video/mp4">
                    </video>
                  <% } else { %>
                    <img src="<%= item.src %>" alt="Event production photo" loading="lazy">
                  <% } %>
                </article>
              <% }) %>
            </div>

            <button type="button" class="slider-arrow slider-arrow-right" data-slider-next aria-label="Next video">&#8594;</button>
          </div>
        </div>
      </section>
    </main>
  </div>

  <script src="/js/animations.js"></script>
  <script src="/js/developing-slider.js"></script>
</body>
</html>
