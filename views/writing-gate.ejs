<%- include('partials/head', { title: 'Writing' }) %>
<body>
  <div class="page-container writing-page writing-gated">
    <%- include('partials/header') %>

    <main>
      <section class="writing-gate-wrap">
        <div class="writing-gate-card">
          <div class="writing-lock-icon" aria-hidden="true">
            <svg viewBox="0 0 24 24" role="img" focusable="false">
              <path d="M17 10h-1V7.75a4 4 0 0 0-8 0V10H7a2 2 0 0 0-2 2v6a2 2 0 0 0 2 2h10a2 2 0 0 0 2-2v-6a2 2 0 0 0-2-2Zm-7-2.25a2 2 0 0 1 4 0V10h-4V7.75Zm7 10.25H7v-6h10v6Z"/>
            </svg>
          </div>

          <% if (errorMessage) { %>
            <p class="writing-gate-error"><%= errorMessage %></p>
          <% } %>

          <form method="post" action="/writing/unlock" class="writing-gate-form" novalidate>
            <input type="text" name="riddle_answer" class="writing-honeypot" tabindex="-1" autocomplete="off" aria-hidden="true">

            <label for="first_name">first name:</label>
            <input id="first_name" name="first_name" type="text" value="<%= formData.first_name %>" required>

            <label for="last_name">last name:</label>
            <input id="last_name" name="last_name" type="text" value="<%= formData.last_name %>" required>

            <label for="email">email address:</label>
            <input id="email" name="email" type="email" value="<%= formData.email %>" required>

            <div class="writing-gate-actions">
              <button type="submit" class="writing-gate-submit">SUBMIT</button>
            </div>
          </form>
        </div>
      </section>
    </main>
  </div>

  <script src="/js/animations.js"></script>
</body>
</html>
