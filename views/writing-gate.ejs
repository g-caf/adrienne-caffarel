<%- include('partials/head', { title: 'Writing' }) %>
<body>
  <div class="page-container writing-page writing-gated">
    <%- include('partials/header') %>

    <main>
      <section class="writing-gate-wrap">
        <div class="writing-gate-card">
          <div class="writing-lock-icon" data-writing-lock aria-hidden="true">
            <svg viewBox="0 0 24 24" role="img" focusable="false">
              <path class="lock-body" d="M7 10h10a2 2 0 0 1 2 2v6a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2v-6a2 2 0 0 1 2-2Z"/>
              <path class="lock-shackle" d="M9 10V7.75a3 3 0 1 1 6 0V10" fill="none" stroke="currentColor" stroke-width="1.8" stroke-linecap="round"/>
            </svg>
          </div>

          <% if (errorMessage) { %>
            <p class="writing-gate-error"><%= errorMessage %></p>
          <% } %>

          <form method="post" action="/writing/unlock" class="writing-gate-form" data-writing-gate-form novalidate>
            <input type="text" name="riddle_answer" class="writing-honeypot" tabindex="-1" autocomplete="off" aria-hidden="true">

            <label for="first_name">first name:</label>
            <input id="first_name" name="first_name" type="text" value="<%= formData.first_name %>" required>

            <label for="last_name">last name:</label>
            <input id="last_name" name="last_name" type="text" value="<%= formData.last_name %>" required>

            <label for="email">email address:</label>
            <input id="email" name="email" type="email" value="<%= formData.email %>" required>

            <div class="writing-gate-actions">
              <button type="submit" class="writing-gate-submit" data-writing-submit>SUBMIT</button>
            </div>
          </form>
        </div>
      </section>
    </main>
  </div>

  <script src="/js/writing-gate.js"></script>
  <script src="/js/animations.js"></script>
</body>
</html>
