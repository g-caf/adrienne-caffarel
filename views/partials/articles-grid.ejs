<%
  const safeArticles = Array.isArray(articles) ? articles : [];
%>
<% if (safeArticles.length === 0) { %>
  <p>No articles available.</p>
<% } else { %>
  <% safeArticles.forEach(article => { %>
    <li class="article-card">
      <a href="<%= article.url %>" class="article-link" target="_blank" rel="noopener noreferrer">
        <div class="article-image <%= article.image_url ? '' : 'no-image' %>">
          <% if (article.image_url) { %>
            <img src="<%= article.image_url %>" alt="<%= article.title %>" loading="lazy">
          <% } %>
        </div>
        <div class="article-content">
          <div class="article-meta">
            <span class="publication-name"><%= article.publication_name %></span>
          </div>
          <h3 class="article-title"><%= article.title %></h3>
          <% if (article.author) { %>
            <p class="article-author">by <%= article.author %></p>
          <% } %>
          <div class="article-footer">
            <% if (article.published_date) { %>
              <span class="publish-date"><%= new Date(article.published_date).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' }) %></span>
            <% } %>
          </div>
        </div>
      </a>
    </li>
  <% }); %>
<% } %>
